{
  "name": "frp-ts",
  "version": "0.0.2",
  "description": "Monorepo for @frp-ts project",
  "author": "raveclassic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raveclassic/frp-ts.git"
  },
  "bugs": {
    "url": "https://github.com/raveclassic/frp-ts/issues"
  },
  "homepage": "https://github.com/raveclassic/frp-ts#readme",
  "workspaces": [
    "./packages/core",
    "./packages/lens",
    "./packages/fp-ts",
    "./packages/react",
    "./packages/test-utils",
    "./packages/utils"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepublishOnly": "npm run test && npm run build",
    "typecheck": "lerna run typecheck",
    "build": "nx run-many --target=build --all --parallel",
    "test": "yarn prettier && yarn eslint && yarn jest",
    "eslint": "eslint . --ext .js,.ts,.json",
    "eslint:fix": "eslint --fix . --ext .js,.ts,.json,.md",
    "jest": "jest --no-cache --collectCoverage=true",
    "jest:watch": "jest --watch",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "typedoc": "typedoc && cp jekyll_config.yml docs/_config.yml",
    "version": "yarn typedoc && git add docs",
    "audit": "yarn-audit-fix --dry-run",
    "audit:fix": "yarn-audit-fix",
    "audit:fix:force": "yarn-audit-fix --force"
  },
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "@nrwl/cli": "13.4.1",
    "@nrwl/eslint-plugin-nx": "13.4.1",
    "@nrwl/jest": "13.4.1",
    "@nrwl/js": "13.4.1",
    "@nrwl/linter": "13.4.1",
    "@nrwl/tao": "13.4.1",
    "@nrwl/workspace": "13.4.1",
    "@swc/cli": "~0.1.52",
    "@swc/core": "1.2.118",
    "@swc/helpers": "~0.2.14",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/travis-cli": "^8.3.5",
    "@octokit/core": "^3.5.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^14.17.30",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "coveralls": "^3.0.13",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-unicorn": "^37.0.1",
    "husky": "^4.2.5",
    "jest": "^27.3.1",
    "lerna": "^3.22.1",
    "prettier": "^2.0.4",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.1",
    "typedoc": "^0.22.6",
    "typescript": "^4.4.4",
    "yarn-audit-fix": "^7.1.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "resolutions": {
    "tslib": "^2.1.0"
  }
}
